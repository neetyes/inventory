<div class="container ">
  <div class="row">
    <div class="col-md-12">
      <h3>Purchases</h3>
      <hr>
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/purchases">Purchases</a></li>
        <li>Show</li>
      </ol>
    </div>
  </div>
  <% @purchase_items.each do |g| %>
      <div class="row">
        <div class="col-md-6">
          <h4 class="col-md-6"><strong>Date: </strong> <%= g.purchase.purchase_date %></h4>
        </div>
        <div class="col-md-3 pull-right">
          <a class="btn btn-primary pull-right" href="<%= new_purchase_path %>"><span><i class="fa fa-plus fa-fw">&nbsp;</i></span>
            Add New</a>
        </div>
      </div>
      <div>
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-6">
              <h4><strong>Purchases from:</strong> <%= g.purchase.supplier.name %></h4>
            </div>
            <div class="col-md-6 text-right">
              <h4><strong>Purchase Amount: </strong> <%= g.purchase.grand_total %></h4>
            </div>
            <% break %>
          </div>
        </div>
  <% end %>
  <br>
  <table class="table table-hover">
    <thead>
    <tr class="bg-success">
      <th>S.N.</th>
      <th>Item Name</th>
      <th>Item Code</th>
      <th>Quantity</th>
      <th>Unit Cost</th>
      <th>SI Unit</th>
    </tr>
    </thead>
    <% @purchase_items.each_with_index do |f, i| %>
        <tbody>
        <tr>
          <td>
            <%= (@page.to_i - 1) * @perpage+ i+1 %>
          </td>
          <td>
            <a href="<%= item_path(f.item.id) %>"><%= f.item.name %></a>
          </td>
          <td>
            <%= f.item.item_code %>
          </td>
          <td>
            <%= f.quantity %>
          </td>
          <td>
            <%= f.unit_price %>
          </td>
          <td>
            <%= f.item.unit.name %>
          </td>
        </tr>
        </tbody>
    <% end %>
  </table>
  </div>
</div>
