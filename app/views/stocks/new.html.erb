<body>
<%= form_for (@stock), :html => {:class => "form-horizontal"} do |f| %>
    <div class="col-md-6 col-md-offset-3 well">
      <% if @stock.errors.any? %>
          <div class="alert-danger">
            <h1>
              <%= pluralize(@stock.errors.count, "error") %>
              occured
            </h1>
            <ul>
              <% @stock.errors.full_messages.each do |e| %>
                  <li> <%= e %> </li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :item_id, :class => "col-md-4" %>
        <div class="col-md-8">
          <%=f.collection_select :item_id, Item.order(:name), :id, :name, {prompt: "Select Category"}, {class: "form-control"}%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :quantity, :class=> "col-md-4" %>
        <div class="col-md-8">
          <%= f.text_field :quantity, :class => "form-control ",:id =>"start_date", :placeholder => "Quantity" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :unit_price, :class => "col-md-4" %>
        <div class="col-md-8"><%= f.text_field :unit_price, :class => "form-control", :placeholder => "Unit price" %> </div>
      </div>
      <div class="form-group">
        <%= f.label :est_sell_price, :class => "col-md-4" %>
        <div class="col-md-8"><%= f.text_field :est_sell_price, :class => "form-control", :placeholder => "Estimated selling price" %> </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
          <%= button_tag(type: "submit", class: "btn btn-success") do %>
              <span><i class="fa fa-plus"></i> Create</span>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
</body>