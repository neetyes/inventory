<div class="col-md-6 col-md-offset-3 well">
  <%= form_for (@unit), :html => {:class => "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :name, :class => "col-md-3" %>
        <div class="col-md-9">
          <%= f.text_field :name, :class => "form-control", :placeholder => "item_name" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :print_name, :class => "col-md-3" %>
        <div class="col-md-9">
          <%= f.text_field :print_name, :class => "form-control", :placeholder => "item_code" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= button_tag(type: "submit", class: "btn btn-success") do %> Update
          <% end %>
        </div>
      </div>
  <% end %>
</div>