<div class="container ">
  <div class="row">
    <div class="col-md-12">
      <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %></div></div>
  <br>

  <div class="row">
    <div class="col-md-12">
      <h3>Show Sale</h3><hr>
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/sales">Sale</a></li>
        <li>Show</li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 pull-right">
      <a class="btn btn-primary pull-right" href="<%= new_sale_path %>"><span><i class="fa fa-plus fa-fw">&nbsp;</i></span>
        Add New</a>
    </div>
    <div class="col-md-12">
      <% @sale_items.each do |g|%>
          <div class="row">
            <h4 class="col-md-6"><strong class="text-danger">Sold To:</strong> <%= g.sale.customer.name %></h4>
            <h4 class="col-md-6"><strong class="text-danger">Date: </strong> <%=  g.sale.sales_date %></h4>
            <h4 class="col-md-6"><strong class="text-danger">Sale Amount: </strong> <%=  g.sale.grand_total %></h4>
            <% break %>
      <% end %>
      </div>

      <br>


      <table class="table table-hover">
        <thead>
        <tr class="bg-primary">
          <th>S.N.</th>
          <th>Item Name</th>
          <th>Item Code</th>
          <th>Quantity</th>
          <th>Unit Cost</th>
          <th>SI Unit</th>
        </tr>
        </thead>

        <% @sale_items.each_with_index do |f, i| %>
            <tbody>
            <tr>
              <td><%= (@page.to_i - 1) * @perpage+ i+1 %></td>
              <td>
                <a href="<%= item_path(f.item.id) %>"><%= f.item.name %></a>
              </td>

              <td>
                <%= f.item.item_code %>
              </td>

              <td>
                <%= f.quantity%>
              </td>

              <td>
                <%= f.unit_price %>
              </td>

              <td>
                <%= f.item.unit.name %>
              </td>

            </tr>
            </tbody>

        <% end %>

      </table>


    </div>

    <%= will_paginate @sale_items, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>