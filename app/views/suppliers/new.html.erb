<body>
<%= form_for (@supplier), :html => {:class => "form-horizontal"} do |f| %>
    <div class="col-md-6 col-md-offset-3 well">
      <% if @supplier.errors.any? %>
          <div class="alert-danger">
            <h1>
              <%= pluralize(@supplier.errors.count, "error") %>
              occured
            </h1>
            <ul>
              <% @supplier.errors.full_messages.each do |e| %>
                  <li> <%= e %> </li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :name, :class => "col-md-3" %>
        <div class="col-md-9">
          <%= f.text_field :name, :class => "form-control ",:id =>"start_date", :placeholder => "customer's name" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :address, :class=> "col-md-3" %>
        <div class="col-md-9">
          <%= f.text_field :address, :class => "form-control ",:id =>"start_date", :placeholder => "Address" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :contact_no, :class => "col-md-3" %>
        <div class="col-md-9"><%= f.text_field :contact_no, :class => "form-control", :placeholder => "contact_no" %> </div>
      </div>
      <div class="form-group">
        <%= f.label :email, :class => "col-md-3" %>
        <div class="col-md-9"><%= f.text_field :email, :class => "form-control", :placeholder => "email" %> </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= button_tag(type: "submit", class: "btn btn-success") do %>
              <span><i class="fa fa-plus"></i> Create</span>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
</body>