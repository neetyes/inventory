<%= form_for (@company_profile), :html => {:class => "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :name, :class => "col-md-2" %>
      <div class="col-md-4"><%= f.text_field :name, :class => "form-control", :placeholder => "name" %> </div>
    </div>
    <div class="form-group">
      <%= f.label :vdc_mun, :class => "col-md-2" %>
      <div class="col-md-4"> <%= f.text_field :vdc_mun, :class => "form-control", :placeholder => "vdc/mun" %> </div>
    </div>
    <div class="form-group">
      <%= f.label :ward_no, :class => "col-md-2" %>
      <div class="col-md-4"> <%= f.text_field :ward_no, :class => "form-control", :placeholder => "ward_no" %> </div>
    </div>
    <div class="form-group">
      <%= f.label :phone, :class => "col-md-2" %>
      <div class="col-md-4"> <%= f.text_field :phone, :class => "form-control", :placeholder => "phone" %> </div>
    </div>
    <div class="form-group">
      <%= f.label :vat_pan_no, :class => "col-md-2" %>
      <div class="col-md-4"><%= f.text_field :vat_pan_no, :class => "form-control", :placeholder => "vat_pan_no" %> </div>
    </div>
    <div class="form-group">
      <%= f.label :logo_url, :class => "col-md-2" %>
      <div class="col-md-4"><%= f.text_field :logo_url, :class => "form-control", :placeholder => "logo_url" %> </div>
    </div>
    <div class="form-group">
      <%= f.label :district, :class => "col-md-2" %>
      <div class="col-md-4"><%= f.text_field :district, :class => "form-control", :placeholder => "district" %> </div>
    </div>
    <div class="form-group">
      <%= f.label :zone, :class => "col-md-2" %>
      <div class="col-md-4"><%= f.text_field :zone, :class => "form-control", :placeholder => "zone" %> </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-4">
        <%= button_tag(type: "submit", class: "btn btn-success") do %>
            <span><i class="fa fa-plus"></i> Create</span>
        <% end %>
      </div>
    </div>
<% end %>