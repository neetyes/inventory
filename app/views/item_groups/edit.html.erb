<body>
<%= form_for (@item_group), :html => {:class => "form-horizontal"} do |f| %>
    <div class="col-md-6 col-md-offset-3 well">
      <div class="form-group">
        <%= f.label :name, :class => "col-md-3" %>
        <div class="col-md-9"><%= f.text_field :name, :class => "form-control", :placeholder => "name" %> </div>
      </div>
      <div class="form-group">
        <%= f.label :parent_id, :class=> "col-md-3" %>
        <div class="col-md-9">
          <%=f.collection_select :parent_id, ItemGroup.order(:name), :id, :name, {prompt: "Select Category"}, {class: "form-control"}%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, :class => "col-md-3" %>
        <div class="col-md-9"><%= f.text_area :description, :class => "form-control", :placeholder => "description" %> </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= button_tag(type: "submit", class: "btn btn-success") do %>
              <span><i class="fa fa-plus"></i> Update</span>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
</body>