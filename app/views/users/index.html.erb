

<table class="table table-bordered" id="items">
  <thead>
  <tr>
    <th>SN</th>
    <th>Email</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |user,i| %>
      <tr>
        <td>
          <%= (@page.to_i - 1) * @number_of_items_per_page + i+1 %>
        </td>
        <td><%= user.email%></td>
      </tr>
  <% end %>
  </tbody>
</table>