<body>
<%= form_for (@fiscal_year), :html => {:class => "form-horizontal"} do |f| %>
    <div class="col-md-5 col-md-offset-3 well">
      <% if @fiscal_year.errors.any? %>
          <div class="alert-danger">
            <h1>
              <%= pluralize(@fiscal_year.errors.count, "error") %>
              occured
            </h1>
            <ul>
              <% @fiscal_year.errors.full_messages.each do |e| %>
                  <li> <%= e %> </li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :name, :class => "col-md-3" %>
        <div class="col-md-9"><%= f.text_field :name, :class => "form-control", :placeholder => "name" %> </div>
      </div>
      <div class="form-group">
        <%= f.label :start_date, :class=> "col-md-3" %>
        <div class="col-md-9 date">
          <%= f.text_field :start_date, :class => "form-control ",:id =>"start_date", :placeholder => "YYYY/MM/DD" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :end_date, :class=> "col-md-3" %>
          <div class="col-md-9 date">
            <%= f.text_field :end_date, :class => "form-control ",:id =>"end_date", :placeholder => "YYYY/MM/DD" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= button_tag(type: "submit", class: "btn btn-success") do %>
              <span><i class="fa fa-plus"></i> Create</span>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
<script>
    $('#start_date').datepicker({
        format: "yyyy/mm/dd",
    }).on('changeDate', function (e) {
        $(this).datepicker('hide');
    });
</script>
<script>
    $('#end_date').datepicker({
        format: "yyyy/mm/dd",
    }).on('changeDate', function (e) {
        $(this).datepicker('hide');
    });
</script>

</body>